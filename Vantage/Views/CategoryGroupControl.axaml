<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:Vantage.ViewModels"
			 xmlns:viewModels="clr-namespace:Vantage.ViewModels"
			 x:Class="Vantage.CategoryGroupControl"
             x:DataType="vm:CategoryGroupViewModel">
	
	<UserControl.DataContext>
		<vm:CategoryGroupViewModel/>
	</UserControl.DataContext>

	<StackPanel>
		<Button Content="{Binding CategoryName}"
		        Click="ToggleExpandButton_Click"/>
		<ItemsControl ItemsSource="{Binding Fields}" Margin="10,0,0,0"
					  IsVisible="{Binding IsExpanded}" HorizontalAlignment="Stretch">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Grid ColumnDefinitions="25*, 75*" Margin="10,10,10,10">
						<TextBlock Text="{Binding Label}" ToolTip.Tip="{Binding Tooltip}" Grid.Column="0" />
						<ContentControl Content="{Binding Value}" ContentTemplate="{Binding SelectedTemplate}" Grid.Column="1" />
					</Grid>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</StackPanel>
</UserControl>
